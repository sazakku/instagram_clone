<main class="bg-gray-100 bg-opacity-25">

  <div class="lg:w-8/12 lg:mx-auto mb-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <% if @profile.follow?(current_user.profile.id, @profile) %>
      <%= button_to "Follow", follow_path(@profile), method: "put", disable: true %>
    <% else %>
      <%= button_to "Follow", follow_path(@profile), method: "put" %>
    <% end %>

      <%= render @profile %>

    <%= link_to 'Edit this profile', edit_profile_path(@profile), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this profile', profile_path(@profile), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to profiles', profiles_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div>
      <%= render 'profile_posts', profile: @profile %>
    </div>
  </div>

</main>
